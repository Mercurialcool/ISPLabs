@{
    ViewData["title"] = Localizer["Title"];
}

<div id="partitions_container">
</div>

@section PageScripts {
    <script src="~/js/jquery.tmpl.js" type="text/javascript"></script>
    <script id="partTmpl" type="text/x-jquery-tmpl">
        <div id="partition_container" class="mt-30 shadow">
            <div class="p-10 mt-10 bg-light border-bottom">${name}</div>
            {%each(id, cat) categories%}
            <div class="p-10 row">
                <div class="col-lg-1">
                    <img src="/images/category-icon.png" height="20" width="20" />
                </div>
                <div class="col-lg-9 ml--60">
                    <a href="/Home/Category/${cat.id}">${cat.name}</a><br />
                    <span class="small font-weight-light mt--10">${cat.description}</span>
                </div>
                <div class="col-lg-2">
                    <span class="small clear">@SharedLocalizer["Topics"]: ${cat.topicsCount}</span><br />
                </div>
            </div>
            <hr class="clear" />
            {%/each%}
        </div>
    </script>
    <script src="~/js/forum_partitions.js" type="text/javascript"></script>
}
