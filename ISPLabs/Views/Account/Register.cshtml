@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="shadow mt-30">
    <div class="p-10 bg-light font-weight-bold border-bottom">
        @SharedLocalizer["Register"]
    </div>
    <div class="row p-10">
        <div class="col-lg-12">
            <form asp-action="Register" asp-controller="Account" asp-antiforgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">@Localizer["Login"]</label>
                    <input type="text" asp-for="Login" class="form-control" />
                    <span class="small" asp-validation-for="Login" />
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">@Localizer["Email"]</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span class="small" asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">@Localizer["Password"]</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span class="small" asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">@Localizer["Confirm Password"]</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span class="small" asp-validation-for="ConfirmPassword" />
                </div>
                <div class="form-group">
                    <input type="submit" value="@SharedLocalizer["Register"]" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>
