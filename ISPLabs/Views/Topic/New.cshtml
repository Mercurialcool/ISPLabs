@model NewTopicModel
@{
    ViewData["Title"] = "New Topic";
}
<div class="shadow mt-30">
    <div class="p-10 bg-light font-weight-bold border-bottom">
        Create new topic
    </div>
    <div class="row p-10">
        <div class="col-lg-12">
            <form asp-action="New" asp-controller="Topic" asp-antiforgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input readonly type="number" asp-for="CategoryId" class="form-control collapse" value="@((ViewBag.Category as Category).Id)" />
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 control-label">Category</label>
                    <div class="col-lg-10">
                        <input readonly type="text" class="form-control-plaintext" value="@((ViewBag.Category as Category).Name)" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-lg-2 control-label">Topic Name</label>
                    <div class="col-lg-10">
                        <input type="text" asp-for="Name" class="form-control" />
                        <span class="small" asp-validation-for="Name" />
                    </div>
                </div>
                <hr />
                <div class="form-group row">
                    <label asp-for="InitialText" class="col-lg-2 control-label">Text</label>
                    <div class="col-lg-10">
                        <textarea asp-for="InitialText" class="form-control"></textarea>
                        <span class="small" asp-validation-for="InitialText" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create topic" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>