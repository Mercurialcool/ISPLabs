@model SendForumMessageModel
@{
    ViewData["Title"] = "Edit Message";
}

<div class="shadow mt-30">
    <div class="p-10 bg-light font-weight-bold border-bottom">
        Edit message
    </div>
    <div class="p-10 row">
        <div class="col-md-12">
            <form asp-action="EditMessage" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input class="collapse" readonly type="number" asp-for="Id" value="@Model.Id" />
                </div>
                <div class="row form-group">
                    <label class="control-label col-lg-2">Topic</label>
                    <div class="col-lg-10">
                        <input readonly class="form-control-plaintext" value="@ViewBag.Topic"/>
                    </div>
                </div>
                <div class="row form-group">
                    <label asp-for="Text" class="control-label col-lg-2"></label>
                    <div class="col-lg-10">
                        <textarea asp-for="Text" class="form-control" ></textarea>
                        <span asp-validation-for="Text" class="small"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <div class="btn btn-default">
                        <a href="~/Home/Topic/@Model.TopicId">Back to Topic</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
